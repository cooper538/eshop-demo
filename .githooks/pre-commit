#!/bin/bash

# Pre-commit hook for CSharpier formatting
# This hook automatically formats staged .cs files before commit

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get list of staged .cs files
STAGED_CS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.cs$' || true)

# Exit early if no C# files are staged
if [ -z "$STAGED_CS_FILES" ]; then
    exit 0
fi

echo -e "${YELLOW}CSharpier: Formatting staged C# files...${NC}"

# Check if dotnet tools are restored
if ! dotnet tool list | grep -q "csharpier"; then
    echo -e "${YELLOW}CSharpier not found. Running dotnet tool restore...${NC}"
    dotnet tool restore
fi

# Format each staged file
FORMATTED_FILES=""
for FILE in $STAGED_CS_FILES; do
    if [ -f "$FILE" ]; then
        # Run CSharpier on the file
        dotnet csharpier format "$FILE" 2>/dev/null

        # Check if file was modified
        if ! git diff --quiet "$FILE" 2>/dev/null; then
            FORMATTED_FILES="$FORMATTED_FILES $FILE"
            # Re-add the formatted file to staging
            git add "$FILE"
        fi
    fi
done

# Report results
if [ -n "$FORMATTED_FILES" ]; then
    echo -e "${GREEN}CSharpier: Formatted and re-staged:${NC}"
    for FILE in $FORMATTED_FILES; do
        echo -e "  ${GREEN}âœ“${NC} $FILE"
    done
fi

echo -e "${GREEN}CSharpier: Done!${NC}"
exit 0
