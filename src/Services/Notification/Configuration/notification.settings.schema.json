{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "notification.settings.schema.json",
  "title": "Notification Service Configuration",
  "description": "Configuration schema for Notification Service YAML settings",
  "type": "object",
  "properties": {
    "Logging": {
      "type": "object",
      "properties": {
        "LogLevel": {
          "type": "object",
          "properties": {
            "Default": {
              "type": "string",
              "enum": ["Trace", "Debug", "Information", "Warning", "Error", "Critical", "None"],
              "description": "Default log level"
            },
            "Microsoft.AspNetCore": {
              "type": "string",
              "enum": ["Trace", "Debug", "Information", "Warning", "Error", "Critical", "None"],
              "description": "Log level for ASP.NET Core"
            }
          }
        }
      }
    },
    "Notification": {
      "type": "object",
      "description": "Notification service specific settings",
      "required": ["Service", "Email"],
      "properties": {
        "Service": {
          "type": "object",
          "required": ["Name"],
          "properties": {
            "Name": {
              "type": "string",
              "maxLength": 50,
              "description": "Service name"
            }
          }
        },
        "Email": {
          "type": "object",
          "description": "Email configuration",
          "required": ["AdminEmail"],
          "properties": {
            "AdminEmail": {
              "type": "string",
              "format": "email",
              "maxLength": 320,
              "default": "admin@eshop.local",
              "description": "Admin email address for system notifications (low stock alerts, etc.)"
            }
          }
        }
      }
    }
  }
}
